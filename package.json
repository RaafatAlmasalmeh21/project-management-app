{
  "name": "buildpro",
  "version": "1.0.0",
  "description": "BuildPro - Construction Project & Workforce Management SaaS",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "@turbo/gen": "^1.12.4",
    "turbo": "^1.12.4",
    "prettier": "^3.2.5",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/raafatmasalmeh/buildpro.git"
  },
  "keywords": [
    "construction",
    "project-management",
    "workforce",
    "saas",
    "multi-tenant",
    "react",
    "react-native",
    "supabase"
  ],
  "author": "Raafat Masalmeh",
  "license": "MIT"
} 